<h1>Posts list</h1>

<p>
  {{link-to "New Post" "posts.new" }}
</p>

{{#if controller.length}}
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          Body
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each post in controller}}
        <tr>
          <td>
            {{post.title}}
          </td>
          <td>
            {{post.body}}
          </td>
          <td>
            {{link-to "Edit" "posts.edit" post}}
          </td>
          <td>
            {{link-to "Show" "posts.show" post}}
          </td>
          <td>
            <a href="#" {{action "remove" post}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Posts found
  </p>
{{/if}}
